general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "tztime local"
order += "memory"
order += "disk /"
order += "cpu_temperature 0"
order += "load"
order += "volume master0"

memory {
  format = "💻 :: %used"
  threshold_degraded = "10%"
  format_degraded = "MEMORY: %free"
}

tztime local {
  format = "🌍 :: %H:%M:%S {%d-%m-%y}"
}

cpu_temperature 0 {
  format = "🔥 :: %degrees °C"
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon5/temp1_input"
}

load {
  format = "📈 :: %5min "
}

disk "/" {
  format = "🏡 :: %free"
}

volume master0 {
  format = "🔊 :: %volume"
  format_muted = "Phones ♪: muted (%volume)"
  device = hw:0
  mixer = "Master"
  mixer_idx = 0
}
